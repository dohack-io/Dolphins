<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="dolphins">
        <class>de.dohack.dolphins.models.Dokument</class>
        <class>de.dohack.dolphins.models.Gremium</class>
        <class>de.dohack.dolphins.models.Tag</class>
        <class>de.dohack.dolphins.models.Benutzer</class>
        <class>de.dohack.dolphins.models.DokumentenTags</class>
        <class>de.dohack.dolphins.models.Kommentar</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://10.4.125.235:5432/DOLPHINS"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- The database username -->
            <property name="javax.persistence.jdbc.user" value="dolphin"/>

            <!-- The database password -->
            <property name="javax.persistence.jdbc.password" value="dolphin"/>
        </properties>
    </persistence-unit>
</persistence>