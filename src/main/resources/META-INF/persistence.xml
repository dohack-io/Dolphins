<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="dolphins" transaction-type="RESOURCE_LOCAL">
        <class>de.dohack.dolphins.models.Dokument</class>
        <class>de.dohack.dolphins.models.Gremium</class>
        <class>de.dohack.dolphins.models.Tag</class>
        <class>de.dohack.dolphins.models.User</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://172.17.0.1:5432/DOLPHINS"/>
            <property name="hibernate.default_schema" value="public"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
            <property name="hibernate.globally_quoted_identifiers" value="true"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.connection.release_mode" value="on_close"/>
            <property name="hibernate.connection.FlushMode" value="manual"/>
            <property name="hibernate.generate_stastistics" value="true"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!-- The database username -->
            <property name="javax.persistence.jdbc.user" value="dolphin"/>

            <!-- The database password -->
            <property name="javax.persistence.jdbc.password" value="dolphin"/>
        </properties>
    </persistence-unit>
</persistence>